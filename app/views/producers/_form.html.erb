<%= form_for @producer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :full_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :full_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :re_system_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :re_system_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :init_kwh_reading, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :init_kwh_reading, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                producers_path, :class => 'btn' %>
  </div>
<% end %>
