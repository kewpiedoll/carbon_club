<%- model_class = Producer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_name) %></th>
      <th><%= model_class.human_attribute_name(:full_name) %></th>
      <th><%= model_class.human_attribute_name(:re_system_type) %></th>
      <th><%= model_class.human_attribute_name(:init_kwh_reading) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:encrypted_password) %></th>
      <th><%= model_class.human_attribute_name(:reset_password_token) %></th>
      <th><%= model_class.human_attribute_name(:reset_password_sent_at) %></th>
      <th><%= model_class.human_attribute_name(:remember_created_at) %></th>
      <th><%= model_class.human_attribute_name(:current_sign_in_at) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_at) %></th>
      <th><%= model_class.human_attribute_name(:current_sign_in_ip) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_ip) %></th>
      <th><%= model_class.human_attribute_name(:confirmation_token) %></th>
      <th><%= model_class.human_attribute_name(:confirmed_at) %></th>
      <th><%= model_class.human_attribute_name(:confirmation_sent_at) %></th>
      <th><%= model_class.human_attribute_name(:unconfirmed_email) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @producers.each do |producer| %>
      <tr>
        <td><%= link_to producer.id, producer_path(producer) %></td>
        <td><%= producer.user_name %></td>
        <td><%= producer.full_name %></td>
        <td><%= producer.re_system_type %></td>
        <td><%= producer.init_kwh_reading %></td>
        <td><%= producer.email %></td>
        <td><%= producer.encrypted_password %></td>
        <td><%= producer.reset_password_token %></td>
        <td><%= producer.reset_password_sent_at %></td>
        <td><%= producer.remember_created_at %></td>
        <td><%= producer.current_sign_in_at %></td>
        <td><%= producer.last_sign_in_at %></td>
        <td><%= producer.current_sign_in_ip %></td>
        <td><%= producer.last_sign_in_ip %></td>
        <td><%= producer.confirmation_token %></td>
        <td><%= producer.confirmed_at %></td>
        <td><%= producer.confirmation_sent_at %></td>
        <td><%= producer.unconfirmed_email %></td>
        <td><%= producer.admin %></td>
        <td><%=l producer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_producer_path(producer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      producer_path(producer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_producer_path,
            :class => 'btn btn-primary' %>
